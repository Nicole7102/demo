<?xml version="1.0" encoding="utf-8"?>
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
                <xql.view.SelecteView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/select_view"/>
                <xql.view.WeekDataView
                    android:id="@+id/week_data_view"
                    android:layout_height="wrap_content"
                    android:layout_width="300dp"
                    android:layout_below="@id/select_view"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignRight="@+id/select_view"
                    android:layout_alignEnd="@+id/select_view" />
                <xql.view.MonthDataView
                    android:id="@+id/month_data_view"
                    android:layout_height="wrap_content"
                    android:layout_width="300dp"
                    android:layout_below="@+id/week_data_view"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignRight="@+id/route_show_delect"
                    android:layout_alignEnd="@+id/route_show_delect" />
                <xql.view.RouteShowDeleteView
                    android:id="@+id/route_show_delect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/month_data_view"/>
                <ImageView android:id="@+id/add_route_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:background="@drawable/add_route_selector"
                    android:src="@mipmap/ic_add"
                    android:layout_marginTop="201dp"
                    android:layout_below="@+id/route_show_delect"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
</RelativeLayout>

